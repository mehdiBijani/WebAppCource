@model DetailViewModel

@{
    ViewBag.Title = "محصول " + Model.Product.Name;
}

<div>
    <h1 class="display-5">@Model.Product.Name</h1>
    <hr/>
    <img src="@($"/images/{Model.Product.Id}.jpg")" 
         alt="@Model.Product.Name"
         class="img-thumbnail"
         height="320" width="320"/>
    <p class="py-5">@Model.Product.Description</p>
    <p>قیمت : @Model.Product.Item.Price</p>
    <dl>
        @foreach (var item in Model.Categories)
        {
            <dt>@item.Name</dt>
            <dd>@item.Description</dd>             
        }
    </dl>
    <div>
        <a class="btn btn-primary"
           asp-controller="Home"
           asp-action="AddToCart"
           asp-route-itemId="@Model.Product.ItemId">افزودن به سبد خرید</a>
    </div>
</div>