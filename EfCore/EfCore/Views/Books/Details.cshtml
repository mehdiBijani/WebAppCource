@model EfCore_Domain.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Title)
        </dd>
        @{
            if (Model.BookDetail != null)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BookDetail.NumberOfChapter)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookDetail.NumberOfChapter)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BookDetail.NumberOfPages)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookDetail.NumberOfPages)
                </dd>
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>